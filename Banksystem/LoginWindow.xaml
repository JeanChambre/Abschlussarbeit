<UserControl x:Class="Banksystem.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banksystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Login" FontSize="25" TextAlignment="Center" Margin="10"></TextBlock>
        <TextBlock HorizontalAlignment="Center" Text="Benutzername" FontSize="20" ></TextBlock>
        <TextBox HorizontalAlignment="Center" Name="Username" Margin="5" Width="130"></TextBox>
        <TextBlock HorizontalAlignment="Center" Text="Passwort" Margin="5" FontSize="20" />
        <PasswordBox HorizontalAlignment="Center" Name="Password" Margin="5" Width="130"></PasswordBox>
        <Button HorizontalAlignment="Center" Content="Login" Click="LoginButton" Margin="5" FontSize="15"  VerticalAlignment="Center" Width="130" ></Button>
    </StackPanel>
</UserControl>
